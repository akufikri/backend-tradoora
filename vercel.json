{
  "version": 2,
  "installCommand": "bun install",
  "buildCommand": "bunx prisma generate && bun run build",
  "functions": {
    "dist/index.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30,
      "includeFiles": "src/generated/**"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ]
}